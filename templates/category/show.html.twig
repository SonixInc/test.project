{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Jobs in the {category} category'|trans({'category': category.name}) }}
{% endblock %}

{% block body %}

    {% include 'job/_job_history.html.twig' with {'historyJobs': historyJobs} only %}

    <div class="py-3">
        <h4>{{ category.name }}</h4>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-4">
                    {{ form_widget(form.query) }}
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>
        </div>
    </div>

    <div class="box">
        {% include 'job/table.html.twig' with {'jobs': activeJobs} only %}
    </div>

    <div class="navigation">
        {{ knp_pagination_render(activeJobs) }}
    </div>
{% endblock %}